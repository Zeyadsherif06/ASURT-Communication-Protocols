/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;

SPI_HandleTypeDef hspi1;

/* USER CODE BEGIN PV */
ADC_ChannelConfTypeDef Temp_Pin;
ADC_ChannelConfTypeDef Throttle_Pin;

// Encoded Readings
uint16_t analog_temp;
uint16_t throttle;
uint16_t ID;
uint8_t analog_throttle;

// SPI buffers
uint8_t send_receive_buffer[8];
uint8_t SPI_Junk[8];

uint16_t ADCreading[2];
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_ADC1_Init(void);
